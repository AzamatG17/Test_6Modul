@model List<_6_modul_Test.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<form asp-controller="Book" asp-action="Index" method="get" class="mt-3 bg-light text-dark">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control bg-light text-dark" placeholder="Search Book" name="searchString" value="@ViewData["CurrentSort"]" />
                <button type="submit" class="btn btn-outline-dark">
                    Search <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>
</form>

<table class="table table-hover table-striped mt-3 bg-light text-dark">
    <thead class="table-primary">
        <tr>
            <th>
                <a asp-route-sortOrder="@ViewData["DescriptionSortKey"]" class="text-decoration-none text-dark">
                    <span style="color: blue;">@Html.DisplayName("Descriptions") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["PriceSortKey"]" class="text-decoration-none text-dark">
                    <span style="color: blue;">@Html.DisplayName("Price") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["CategorySortKey"]" class="text-decoration-none text-dark">
                    <span style="color: blue;">@Html.DisplayName("Category") <i class="fa fa-sort"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Descriptions
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>